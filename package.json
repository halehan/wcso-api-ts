{
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "name": "wcso-api-ts",
  "version": "1.0.0",
  "description": "WCSO api using TypeScript",
  "engines": {
    "node": "8.5.0",
    "npm": "5.4.2"
  },
  "main": "index.js",
  "scripts": {
    "compile": "tsc --declaration",
    "lint": "tslint --project tsconfig.json",
    "test": "mocha",
    "test-dev": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register test/**/*.spec.ts\"",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "ts": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halehan/wcso-api-ts.git"
  },
  "author": "Thomas D. Williams",
  "license": "ISC",
  "dependencies": {
    "@composite/equals-ignore-case": "^1.0.0",
    "@types/moment": "^2.13.0",
    "async": "^2.5.0",
    "bcrypt": "^1.0.3",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-validator": "^4.3.0",
    "facebook-chat-api": "^1.4.0",
    "googlemaps": "^1.12.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.2.2",
    "jsonwebtoken": "^8.1.0",
    "moment": "^2.19.1",
    "mongodb": "^2.2.9",
    "mongoose": "^5.7.5",
    "mongoose-gridfs": "^0.3.2",
    "morgan": "^1.9.0",
    "node-restful": "^0.2.5",
    "oauth": "^0.9.15",
    "passport": "^0.4.0",
    "twilio": "^3.29.2",
    "twitter-api-ts": "0.0.29",
    "typings": "^2.1.1"
  },
  "bugs": {
    "url": "https://github.com/halehan/wcso-api-ts/issues"
  },
  "homepage": "https://github.com/halehan/wcso-api-ts#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.9.8",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^2.9.2"
  }
}
